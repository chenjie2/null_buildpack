#!/usr/bin/env bash

echo "========> do nothing"

BUILDPACKR_DI=$(cd $(dirname $0)/.. ; pwd)
BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Assembling Tomcat App."
echo " Working dir = $(pwd)"
echo " Build dir = $BUILD_DIR"
echo " Cache dir = $CACHE_DIR"
echo " Buildpack dir = $BUILDPACK_DIR"

echo `ls $BUILD_DIR/*`
echo `ls $CACHE_DIR/*`

echo "<============download tomcat"
cd $BUILD_DIR
wget -q http://download.run.pivotal.io/tomcat/tomcat-6.0.33.tar.gz
echo "<============unzip tomcat"
tar -zxf tomcat-6.0.33.tar.gz


echo "<============download openjdk"

wget -q http://download.run.pivotal.io/openjdk/lucid/x86_64/openjdk-1.7.0_51.tar.gz
echo "<============unzip openjdk"
mkdir -p openjdk
mv openjdk-1.7.0_51.tar.gz openjdk
cd openjdk
tar -zxf openjdk-1.7.0_51.tar.gz

echo `ls $BUILD_DIR/*`

echo "<============mod server.xml"
cd $BUILD_DIR
mv apache-tomcat-6.0.33/conf/server.xml apache-tomcat-6.0.33/conf/server.xml.bak
cp $BUILDPACK_DIR/server.xml apache-tomcat-6.0.33/conf/
cat apache-tomcat-6.0.33/conf/server.xml
cp $BUILDPACK_DIR/run_tomcat.sh apache-tomcat-6.0.33/bin/
chmod +x apache-tomcat-6.0.33/bin/run_tomcat.sh

echo "<===============finsh"
exit 0
