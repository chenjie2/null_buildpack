#!/usr/bin/env bash

echo "========> do nothing"

BUILDPACK_DIR=$(cd $(dirname $0)/.. ; pwd)
BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Assembling Tomcat App."
echo " Working dir = $(pwd)"
echo " Build dir = $BUILD_DIR"
echo " Cache dir = $CACHE_DIR"
echo " Buildpack dir = $BUILDPACK_DIR"

echo `ls $BUILD_DIR/*`
echo `ls $CACHE_DIR/*`

echo "<============unzip tomcat"
cd $BUILD_DIR
wget -q http://download.run.pivotal.io/tomcat/tomcat-6.0.33.tar.gz
tar -zxf apache-tomcat-6.0.39.tar.gz 



echo `ls $BUILD_DIR/*`

wget -q http://download.run.pivotal.io/openjdk/lucid/x86_64/openjdk-1.7.0_51.tar.gz
mkdir -p openjdk
mv openjdk-1.7.0_51.tar.gz openjdk
cd openjdk
tar -zxf openjdk-1.7.0_51.tar.gz



echo "<===============finsh"
exit 0
